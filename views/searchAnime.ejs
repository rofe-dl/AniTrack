<%- include('./include/_head.ejs') %>
<body>
    <%- include('./include/_navbar.ejs') %>
    <div class="container">
        <div class="text-center general-title">
            <h4>Search for anime</h4>
        </div>
        <form method="GET" action="/anime/search">
            <div class="form-row">
                <div class="col-md-6 col-12">
                  <input type="text" class="form-control form-control-sm" placeholder="Search ..." name="name">
                </div>
                <div class="col-md-2 col-5">
                  <select class="form-control form-control-sm" name="genre">
                    <%- include('./include/_genres.ejs') %>
                  </select>
                </div>
                <div class="col-md-2 col-5">
                    <select class="form-control form-control-sm" name="status">
                        <option value="">-- Status --</option>
                        <option value="airing">Airing</option>
                        <option value="completed">Completed</option>
                        <option value="to_be_aired">To Be Aired</option>
                        <option value="upcoming">Upcoming</option>
                    </select>
                </div>
                <div class="col-md-2 col-2">
                    <button type="submit" class="btn btn-primary btn-sm">Search</button>
                </div>
            </div>
        </form>
    </div>
    <hr>
    <div class="container">
        <h4 class="general-title">Search results:</h4>
        <div class="row row-cols-5">
            <%  results.forEach( (anime) => { %>
                <%- include('./include/_animeThumbnail.ejs', {anime: anime}) %>
            <% }); %>
        </div>
    </div>
    
</body>
</html>