<%- include('./include/_head.ejs') %>
<body>
    <%- include('./include/_navbar.ejs') %>
    <div class="container">
        <div class="text-center general-title">
            <h4>Search for anime</h4>
        </div>
        <form method="GET" action="/anime/search">
            <div class="form-row">
                <div class="col-md-2 col-12">
                  <input type="text" class="form-control form-control-sm" placeholder="Search ..." name="name">
                </div>
                <div class="col-md-2 col-4">
                  <select class="form-control form-control-sm" name="genre">
                    <%- include('./include/_genres.ejs') %>
                  </select>
                </div>
                <div class="col-md-2 col-4">
                    <select class="form-control form-control-sm" name="status">
                        <option value="">-- Status --</option>
                        <option value="airing">Airing</option>
                        <option value="completed">Completed</option>
                        <option value="to_be_aired">To Be Aired</option>
                        <option value="upcoming">Upcoming</option>
                    </select>
                </div>
                <div class="col-md-2 col-4">
                    <select class="form-control form-control-sm" name="order_by">
                        <option value="">-- Order By --</option>
                        <option value="title">Title</option>
                        <option value="start_date">Start Date</option>
                        <option value="end_date">End Date</option>
                        <option value="score">Score</option>
                    </select>
                </div>
                <div class="col-md-2 col-8">
                    <select class="form-control form-control-sm" name="sort_by">
                        <option value="">-- Sort By --</option>
                        <option value="ascending">Ascending</option>
                        <option value="descending">Descending</option>
                    </select>
                </div>
                <div class="col-md-2 col-4">
                    <button type="submit" class="btn btn-primary btn-sm btn-block">Search</button>
                </div>
            </div>
        </form>
    </div>
    <hr>
    <div class="container">
        <h4 class="general-title">Search results:</h4>
        <div class="row row-cols-5">
            <%  results.forEach( (anime) => { %>
                <%- include('./include/_anime_thumbnail.ejs', {anime: anime}) %>
            <% }); %>
        </div>
    </div>
    
</body>
</html>